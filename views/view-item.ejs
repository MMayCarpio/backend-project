<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2>View item</h2>
            <div class="form-group mb-3">
                <label for="identifier">Item ID</label>
                <input type="text" class="form-control" id="identifier" name="identifier" disabled value="<%= item._id %>">
            </div>
            <div class="form-group mb-3">
                <label for="name">Item Name</label>
                <input type="text" class="form-control" id="name" name="name" disabled value="<%= item.name %>">
            </div>
            <div class="form-group mb-3">
                <label for="category">Item Category</label>
                <input type="text" class="form-control" id="category" name="category" disabled value="<%= item.category %>">
            </div>
            <div class="form-group mb-3">
                <label for="quantity">Item Quantity</label>
                <input type="number" class="form-control" id="quantity" name="quantity" disabled value="<%= item.quantity %>">
            </div>
            <div class="form-group mb-3">
                <label for="price">Item Price</label>
                <input type="number" class="form-control" id="price" name="price" disabled value="<%= item.price %>">
            </div>
            <div class="form-group  mb-3">
                <label for="description">Item Description</label>
                <textarea class="form-control" id="description" name="description" disabled><%= item.description %></textarea>
            </div>
            <form action="/items/<%= item._id %>?_method=DELETE" id="delete-item-form" method="post"></form>
            <a href="/items" class="btn btn-outline-primary">Cancel</a>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
    
        window.onload = function() {
            if (urlParams.get("successUpdate") === "true") {
                alert("Item updated successfully!");
                window.location.href = window.location.href.split('/?')[0];
            }

            if (urlParams.get("deleteConfirm") === "true") {
                if (confirm("Are you sure you want to delete this item?")) {
                    document.getElementById("delete-item-form").submit();
                } else {
                    window.location.href = '/items';
                }
            }
        }
    </script>
</body>
</html>